{
  "name": "chemistry-lab-simulator",
  "version": "1.0.0",
  "description": "Interactive Chemistry Lab Simulation with AR/VR capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm install && npm run build",
    "vercel-build": "npm run build && cd client && npm run build"
  },
  "dependencies": {
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@react-three/drei": "^10.0.8",
    "@react-three/fiber": "^9.1.2",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "react-chartjs-2": "^5.3.0",
    "react-router-dom": "^7.6.0",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
